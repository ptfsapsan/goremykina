{% extends 'admin.html.twig' %}

{% block content %}
    <h3>Сообщения</h3>
    {% for message in messages %}
        <div>
            <div>
                <span>{{ message.date|date('d.m.Y H:i') }}</span>
                <span>{{ message.email }}</span>
                <span>{{ message.name }}</span>
            </div>
            <div>{{ message.text }}</div>
        </div>
    {% endfor %}
{% endblock %}
